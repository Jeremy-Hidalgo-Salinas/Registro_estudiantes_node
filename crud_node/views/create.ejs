          <div class="container mt-4" >
            <div class="card border-secondary" >
                <div class="card-header" style="background-color: #3890dd;">Nuevo Registro</div>
                <div class="card-body"></div>
                    <form action="/save" method="post">
                          <div class="mb-3">
                            <label for="user" class="form-control">Usuario</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" tabindex="1">
                          </div>
                          <div class="mb-3">
                            <label for="user" class="form-control">Apellido</label>
                            <input type="text" class="form-control" id="apellido" name="apellido" tabindex="1">
